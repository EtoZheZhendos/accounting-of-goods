<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.store.inventory.controller.NomenclatureDialogController"
      spacing="10" styleClass="dialog-content">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Добавление/Редактирование номенклатуры" styleClass="dialog-header"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="120" prefWidth="120"/>
            <ColumnConstraints minWidth="300" prefWidth="400" hgrow="ALWAYS"/>
        </columnConstraints>

        <!-- Артикул -->
        <Label text="Артикул*:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="articleField" promptText="Введите артикул" 
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Наименование -->
        <Label text="Наименование*:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" promptText="Введите наименование" 
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Описание -->
        <Label text="Описание:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionArea" promptText="Введите описание" 
                  prefRowCount="3" wrapText="true"
                  GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Единица измерения -->
        <Label text="Ед. изм.*:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="unitField" promptText="шт, кг, л, м..." 
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Производитель -->
        <Label text="Производитель:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="manufacturerCombo" prefWidth="400" 
                  GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <!-- Минимальный запас -->
        <Label text="Мин. запас:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <Spinner fx:id="minStockSpinner" prefWidth="150" editable="true"
                 GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <Label text="* - обязательные поля" styleClass="hint-label"/>

    <!-- Кнопки -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="saveButton" text="Сохранить" onAction="#handleSave" 
                styleClass="primary-button" defaultButton="true"/>
        <Button fx:id="cancelButton" text="Отмена" onAction="#handleCancel" 
                cancelButton="true"/>
    </HBox>
</VBox>

