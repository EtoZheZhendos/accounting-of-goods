<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.store.inventory.controller.ItemDialogController"
      spacing="10" styleClass="dialog-content" prefWidth="600">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Добавление/Редактирование товарной позиции" styleClass="dialog-header"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="150" prefWidth="150"/>
            <ColumnConstraints minWidth="300" prefWidth="400" hgrow="ALWAYS"/>
        </columnConstraints>

        <!-- Номенклатура -->
        <Label text="Номенклатура*:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="nomenclatureCombo" prefWidth="400"
                  GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Полка -->
        <Label text="Полка*:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="shelfCombo" prefWidth="400"
                  GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Номер партии -->
        <Label text="Номер партии*:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="batchNumberField" promptText="BATCH-2024-001"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Начальное количество -->
        <Label text="Начальное кол-во*:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="initialQuantityField" promptText="100"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Текущее количество -->
        <Label text="Текущее кол-во*:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="currentQuantityField" promptText="100"
                   GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <!-- Цена закупки -->
        <Label text="Цена закупки*:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="purchasePriceField" promptText="1500.00"
                   GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <!-- Цена продажи -->
        <Label text="Цена продажи*:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="sellingPriceField" promptText="2000.00"
                   GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <!-- Дата производства -->
        <Label text="Дата производства*:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <DatePicker fx:id="manufactureDatePicker"
                    GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <!-- Срок годности -->
        <Label text="Срок годности:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <DatePicker fx:id="expiryDatePicker"
                    GridPane.rowIndex="8" GridPane.columnIndex="1"/>
    </GridPane>

    <Label text="* - обязательные поля" styleClass="hint-label"/>
    <Label text="Примечание: при редактировании нельзя изменить номенклатуру, партию и начальное количество" 
           styleClass="hint-label"/>

    <!-- Кнопки -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="saveButton" text="Сохранить" onAction="#handleSave" 
                styleClass="primary-button" defaultButton="true"/>
        <Button fx:id="cancelButton" text="Отмена" onAction="#handleCancel" 
                cancelButton="true"/>
    </HBox>
</VBox>

